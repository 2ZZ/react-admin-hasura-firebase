{
  "version": 2,
  "tables": [
    {
      "table": {
        "schema": "public",
        "name": "todos"
      },
      "select_permissions": [
        {
          "role": "anonymous",
          "permission": {
            "columns": [
              "is_completed",
              "is_public",
              "id",
              "title",
              "user_id",
              "created_at"
            ],
            "filter": {
              "is_public": {
                "_eq": true
              }
            },
            "allow_aggregations": true
          }
        },
        {
          "role": "user",
          "permission": {
            "columns": [
              "id",
              "title",
              "is_completed",
              "is_public",
              "created_at",
              "user_id"
            ],
            "filter": {
              "user_id": {
                "_eq": "X-Hasura-User-Id"
              }
            },
            "allow_aggregations": true
          }
        }
      ],
      "update_permissions": [
        {
          "role": "user",
          "permission": {
            "columns": [
              "is_completed",
              "is_public",
              "title"
            ],
            "filter": {
              "user_id": {
                "_eq": "X-Hasura-User-Id"
              }
            }
          }
        }
      ]
    },
    {
      "table": {
        "schema": "public",
        "name": "users"
      },
      "select_permissions": [
        {
          "role": "anonymous",
          "permission": {
            "columns": [
              "id",
              "email",
              "created_at",
              "last_seen"
            ],
            "filter": {
              "id": {
                "_eq": "0"
              }
            },
            "allow_aggregations": true
          }
        },
        {
          "role": "user",
          "permission": {
            "columns": [
              "id",
              "email",
              "created_at",
              "last_seen"
            ],
            "filter": {},
            "allow_aggregations": true
          }
        }
      ],
      "update_permissions": [
        {
          "role": "user",
          "permission": {
            "columns": [
              "email"
            ],
            "filter": {
              "id": {
                "_eq": "X-Hasura-User-Id"
              }
            }
          }
        }
      ]
    }
  ]
}